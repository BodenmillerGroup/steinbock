{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app/steinbock"
                    }
                ],
                "projectType": "general"
            }
        },
        {
            "name": "Python: Remote Attach (steinbock-debug)",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "compose-up: steinbock-debug",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app/steinbock"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Python: Remote Attach (pytest-debug)",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "compose-up: pytest-debug",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app/steinbock"
                }
            ],
            "justMyCode": false
        },
    ]
}