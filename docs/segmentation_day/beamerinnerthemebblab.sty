\mode<presentation>

\defbeamertemplate*{title page}{bblab}[1][]
{
	\vfill
	\begin{center}
		
		% Title
		\begin{beamercolorbox}[sep=8pt,center,#1]{title}
			\usebeamerfont{title}\inserttitle\par%
			\ifx\insertsubtitle\@empty%
			\else%
			\vskip0.25em%
			{\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
			\fi
		\end{beamercolorbox}%
	
		\vskip1em\par
		
		% Author
		\begin{beamercolorbox}[sep=8pt,center,#1]{author}
			\usebeamerfont{author}\insertauthor
		\end{beamercolorbox}
	
		% Date
		\begin{beamercolorbox}[sep=8pt,center,#1]{date}
			\usebeamerfont{date}\insertdate
		\end{beamercolorbox}

	\end{center}
	\vfill
	
	\begin{tikzpicture}[remember picture,overlay]
		\usebeamercolor{title page footline}
		\fill[fill=bg](current page.south west) rectangle ([yshift=64pt]current page.south east);
		{%
			\usebeamercolor{title page footlinesep}
			\fill[fill=fg]([yshift=64pt]current page.south west) rectangle ([yshift=65.5pt]current page.south east);
		}%
		\node[anchor=south west] at([xshift=8pt,yshift=8pt]current page.south west) {%
			\ifx\inserttitlegraphic\@empty%
			\includegraphics[height=40pt]{eth_uzh_logo_kurz_neg_en}%
			\else%
			\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par%
			\fi
		};	
		\node[anchor=south east] at([xshift=-8pt,yshift=8pt]current page.south east) {	
			\begin{beamercolorbox}[right,#1]{institute}
				\ifx\insertinstitute\@empty%
				\usebeamerfont{institute}%
					\textbf{\normalsize Bodenmiller Lab}\\
					\url{http://www.bodenmillerlab.com}\\
					\vspace{1ex}
					Department of Quantitative Biomedicine%
				\else%
				\usebeamerfont{institute}\insertinstitute%
				\fi%
			\end{beamercolorbox}
		};
	
	\end{tikzpicture}

}

\setbeamertemplate{title page}[bblab]

