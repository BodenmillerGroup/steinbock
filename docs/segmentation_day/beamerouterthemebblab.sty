\mode<presentation>

\defbeamertemplate*{navigation symbols}{bblab}
{%
	\vspace{4pt}%
	\hbox{%
		\hbox{\insertslidenavigationsymbol}
		\hbox{\insertframenavigationsymbol}
		\hbox{\insertsubsectionnavigationsymbol}
		\hbox{\insertsectionnavigationsymbol}
		\hbox{\insertdocnavigationsymbol}
		\hbox{\insertbackfindforwardnavigationsymbol}%
	}%
	{%
		\ifx\insertfootline\@empty%
		\else%
		{%
			\hspace*{8pt}%
			\usebeamerfont{footline}%
			\usebeamercolor[fg]{footline}%
			\footnotesize\raggedleft\insertfootline%
		}%
		\fi%
	}%
	\hspace*{8pt}%
	\usebeamerfont{footline}%
	\usebeamercolor[fg]{footline}%
	\footnotesize\raggedleft\insertframenumber/\inserttotalframenumber%
	\hspace*{8pt}%
}

\setbeamertemplate{navigation symbols}[bblab]

% TODO show section title in frame title?
\defbeamertemplate*{frametitle}{bblab}[1][left]
{%
	\ifbeamercolorempty[bg]{frametitle}{}{\nointerlineskip}%
	\@tempdima=\textwidth%
	\advance\@tempdima by\beamer@leftmargin%
	\advance\@tempdima by\beamer@rightmargin%
	\begin{beamercolorbox}[sep=0.3cm,#1,wd=\the\@tempdima]{frametitle}
		\usebeamerfont{frametitle}%
		\vbox{}\vskip-1ex%
		\if@tempswa\else\csname beamer@fte#1\endcsname\fi%
		\strut\insertframetitle\par%
		{%
			\ifx\insertframesubtitle\@empty%
			\else%
			{\usebeamerfont{framesubtitle}\usebeamercolor[fg]{framesubtitle}\strut\insertframesubtitle\par}%
			\fi
		}%
		\vskip-1ex%
		\if@tempswa\else\vskip-.3cm\fi% set inside beamercolorbox... evil here...
	\end{beamercolorbox}%
	\vskip-.6cm% empirically estimated :-)
	\begin{beamercolorbox}[wd=\the\@tempdima,ht=2pt]{frametitlesep}
	\end{beamercolorbox}%
}

\setbeamertemplate{frametitle}[bblab]

